        {
          "value": "right",
          "label": "Video on right"
        },
        {
          "value": "left",
          "label": "Video on left"
        }
      ],
      "default": "right"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
     "type": "color",
