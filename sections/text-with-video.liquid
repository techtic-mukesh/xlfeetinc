{{ 'text-with-video.css' | asset_url | stylesheet_tag }}

{% style %}

.text-video-{{ section.id }} .wrapper{
    padding-top: {{ section.settings.mpadding_top }}px;
    padding-bottom: {{ section.settings.mpadding_bottom }}px;
}

@media screen and (min-width: 750px) {
    .text-video-{{ section.id }} .wrapper{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    }
} 
.text-video-{{ section.id }} .grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40px;
  align-items: center;
}

@media (max-width: 749px) {
  .text-video-{{ section.id }} .grid {
    grid-template-columns: 1fr;
    gap:20px;
  }
}

/* LEFT / RIGHT SWITCH */
.text-video-{{ section.id }}.video-left .content-col {
  order: 2;
}

.text-video-{{ section.id }}.video-left .video-col {
  order: 1;
}

.text-video-{{ section.id }} h2 {
  font-size: clamp(24px, 3vw, 37px);
  margin-bottom: 20px;
  line-height: 1.14;
}

.text-video-{{ section.id }} .video-wrapper {
  border-radius: {{ section.settings.video_radius }}px;
  overflow: hidden;
}

/* Video base */
.text-video-{{ section.id }} iframe,
.text-video-{{ section.id }} video {
  width: 100%;
  aspect-ratio: 16 / 9;
  display: block;
  border: 0;
}

/* Shopify video controls on hover */
.text-video-{{ section.id }} video::-webkit-media-controls {
  opacity: 0;
  transition: opacity 0.3s ease;
}

.text-video-{{ section.id }} video:hover::-webkit-media-controls {
  opacity: 1;
}

/* YouTube / Vimeo hover interaction */
.text-video-{{ section.id }} .video-wrapper iframe {
  pointer-events: none;
}

.text-video-{{ section.id }} .video-wrapper:hover iframe {
  pointer-events: auto;
}
.video_description{
    color:{{ section.settings.description_color }}
}
{% endstyle %}

<section
  class="text-video-{{ section.id }} color-{{ section.settings.color_scheme }}
  {% if section.settings.video_position == 'left' %}video-left{% endif %}">
  <div class="page-width wrapper">
    <div class="grid">

      <!-- TEXT CONTENT -->
      <div class="content-col">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}

        {% if section.settings.text != blank %}
          <div class="rte video_description">
            {{ section.settings.text }}
          </div>
        {% endif %}
      </div>

      <!-- VIDEO -->
      <div class="video-wrapper video-col">

        {% if section.settings.shopify_video != blank %}
          {{
            section.settings.shopify_video
            | video_tag:
              autoplay: true,
              muted: true,
              controls: true
          }}

        {% elsif section.settings.video_url != blank %}
          {% assign video_url = section.settings.video_url %}

          {% if video_url contains 'youtu' %}
            {% assign video_id = video_url
              | replace: 'https://youtu.be/', ''
              | replace: 'https://www.youtube.com/watch?v=', ''
              | split: '&'
              | first
            %}
            <iframe
              src="https://www.youtube.com/embed/{{ video_id }}?autoplay=1&mute=1"
              allow="autoplay; encrypted-media"
              allowfullscreen
              loading="lazy">
            </iframe>

          {% elsif video_url contains 'vimeo' %}
            {% assign video_id = video_url | split: '/' | last %}
            <iframe
              src="https://player.vimeo.com/video/{{ video_id }}?autoplay=1&muted=1"
              allow="autoplay; encrypted-media"
              allowfullscreen
              loading="lazy">
            </iframe>
          {% endif %}

        {% endif %}
      </div>

    </div>
  </div>
</section>

