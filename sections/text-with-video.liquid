      "min": 0,
      "max": 30,
      "step": 2,
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 120,
      "step": 2,
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 120,
      "step": 2,
      "default": 60
    },
    {
      "type":"header",
      "content":"Moblie Padding"
    },
    {
      "type": "range",
      "id": "mpadding_top",
      "label": "Padding top",
      "min": 0,
      "max": 120,
      "step": 2,
      "default": 30
    },
    {
      "type": "range",
      "id": "mpadding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 120,
      "step": 2,
      "default": 30
    }
  ],
  "presets": [
    {
      "name": "Text with Video"
    }
  ]
}
{% endschema %}
