      "default": "#E5E5E5"
    },
    {
      "type": "header",
      "content": "Desktop Settings"
    },
    {
      "type": "range",
      "id": "desktop_columns",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Desktop columns",
      "default": 4
    },
    {
      "type": "range",
      "id": "desktop_gap",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Desktop gap",
      "default": 20
    },
    {
      "type": "range",
      "id": "desktop_title_size",
      "min": 12,
      "max": 32,
      "step": 1,
      "unit": "px",
      "label": "Desktop title size",
      "default": 14
    },
    {
      "type": "range",
      "id": "desktop_text_size",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Desktop text size",
      "default": 13
    },
    {
      "type": "header",
      "content": "Mobile Settings"
    },
    {
      "type": "range",
      "id": "mobile_columns",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "Mobile columns",
      "default": 2
    },
    {
      "type": "range",
      "id": "mobile_gap",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Mobile gap",
      "default": 12
    },
    {
      "type": "range",
      "id": "mobile_title_size",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Mobile title size",
      "default": 14
    },
    {
      "type": "range",
      "id": "mobile_text_size",
      "min": 8,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Mobile text size",
      "default": 12
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "html",
          "id": "icon_svg",
          "label": "Icon SVG",
          "info": "Paste your SVG code here"
        },
        {
          "type": "text",
          "id": "icon",
          "label": "Icon file name",
          "info": "Enter icon file name from assets folder (e.g., icon-stopwatch.svg)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feature Blocks",
      "blocks": [
      
      ]
    }
  ]
