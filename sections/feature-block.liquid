{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .feature-blocks-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    border-top:1px solid  {{ section.settings.divider_color }};
  }
  .custom_page_width{
    text-align: center;
    max-width:{{ section.settings.custom_page_width }}px;
    width:100%;
    margin:auto;
    padding:0 20px;
  }
  .feature-blocks-{{ section.id }} .feature-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.mobile_columns }}, 1fr);
    gap: {{ section.settings.mobile_gap }}px;
    max-width: 100%;
    margin: 0 auto;
    /* padding: 0 15px; */
  }

  @media screen and (min-width: 750px) {
    .feature-blocks-{{ section.id }} .feature-grid {
      grid-template-columns: repeat({{ section.settings.desktop_columns }}, 1fr);
      gap: {{ section.settings.desktop_gap }}px;
      /* padding: 0 30px; */
    }
  }

  .feature-blocks-{{ section.id }} .feature-block {
    text-align: center;
    /* padding: 15px; */
  }

  @media screen and (min-width: 750px) {
    .feature-blocks-{{ section.id }} .feature-block {
      text-align: left;
      padding: 20px 20px 20px 0px;
    }
  }

  /* Mobile: Icon on top, stacked layout */
  .feature-blocks-{{ section.id }} .feature-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    margin-bottom: 8px;
  }
   .featured_content {
      display: flex;
      flex-direction: column;
      gap: 5px;
  }
  /* Desktop: Icon and title inline */
  @media screen and (min-width: 750px) {
    .feature-blocks-{{ section.id }} .feature-header {
      /* flex-direction: row; */
      align-items: center;
      gap: 20px;
      margin-bottom: 6px;
    }
 
  }

  .feature-blocks-{{ section.id }} .feature-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .feature-blocks-{{ section.id }} .feature-icon svg {
    color: {{ section.settings.icon_color }};
  }

  @media screen and (min-width: 750px) {
    .feature-blocks-{{ section.id }} .feature-icon svg {
    }
  }

  .feature-blocks-{{ section.id }} .feature-title {
    font-size: {{ section.settings.mobile_title_size }}px;
    font-weight: 500;
    color: {{ section.settings.title_color }};
    margin: 0;
    text-transform: uppercase;
  }

  @media screen and (min-width: 750px) {
    .feature-blocks-{{ section.id }} .feature-title {
      font-size: {{ section.settings.desktop_title_size }}px;
      line-height: 18px;
    text-transform: uppercase;
    font-weight: 500;
    font-family: 'Helvetica Neue';
    color: #000;
    text-align: center;
    }
  }

  .feature-blocks-{{ section.id }} .feature-text {
    font-size: {{ section.settings.mobile_text_size }}px;
    color: {{ section.settings.text_color }};
    margin: 0;
    /* text-transform: lowercase; */
    font-weight: 500;
    font-family: 'Helvetica Neue';
    color: #7d7d7d;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .feature-blocks-{{ section.id }} .feature-text p::first-letter {
    text-transform: uppercase; /* capitalize only the first letter */
  }
/* Desktop vertical divider */
@media screen and (min-width: 750px) {
  .feature-blocks-{{ section.id }} .feature-block {
    position: relative;
  }

  .feature-blocks-{{ section.id }} .feature-block:not(:first-child)::before {
    content: "";
    position: absolute;
    left: -{{ section.settings.desktop_gap | divided_by: 2 }}px;
    top: 10%;
    height: 80%;
    width: 1px;
    background-color: {{ section.settings.divider_color }};
  }
}


  @media screen and (min-width: 750px) {
    .feature-blocks-{{ section.id }} .feature-text {
      font-size: {{ section.settings.desktop_text_size }}px;
    }
  }

  .feature-blocks-{{ section.id }} .feature-text p {
    margin: 0;
  }
  @media screen and (max-width: 989px) {
    .feature-blocks-{{ section.id }} .feature-title {
      font-size:14px;
    }
    .feature-blocks-{{ section.id }} .feature-text p {
      font-size:12px;
      line-height: 20px;
    }
  }
{%- endstyle -%}

<div class="feature-blocks-{{ section.id }} section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="custom_page_width">
    <div class="feature-grid container">
      {%- for block in section.blocks -%}
        <div class="feature-block" {{ block.shopify_attributes }}>
          <div class="feature-header">
            {%- if block.settings.icon_svg != blank or block.settings.icon != blank -%}
              <div class="feature-icon">
                {%- if block.settings.icon_svg != blank -%}
                  {{ block.settings.icon_svg }}
                {%- elsif block.settings.icon != blank -%}
                  {{ block.settings.icon | inline_asset_content }}
                {%- endif -%}
              </div>
            {%- endif -%}
            <div class="featured_content">
              {%- if block.settings.title != blank -%}
              <h3 class="feature-title">{{ block.settings.title }}</h3>
              {%- endif -%}
              {%- if block.settings.text != blank -%}
                <div class="feature-text">{{ block.settings.text }}</div>
              {%- endif -%}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Feature Blocks",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
