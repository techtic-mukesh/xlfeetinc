    {  
      "type": "range",
      "id": "custom_page_width",
      "min": 1200,
      "max": 1600,
      "step": 4,
      "default": 1200,
      "unit": "px",
      "label": "Content Page Width"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#F9F6F2"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon color",
      "default": "#1E1E1E"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#1E1E1E"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "divider_color",
