{% comment %}
  Section: Image with text (CMS-ready)
  Theme: Shopify Dawn
{% endcomment %}


<section class="image-text-cta color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="custom-page-width">
    <div class="image-text-cta__grid image-text-cta__grid--{{ section.settings.image_position }}">
      
      {% if section.settings.image != blank %}
        <div class="image-text-cta__media">
          {{ section.settings.image | image_url: width: 1200 | image_tag:
            loading: 'lazy',
            widths: '375, 550, 750, 1100, 1500',
            class: 'image-text-cta__image'
          }}
        </div>
      {% endif %}

      <div class="image-text-cta__content">
        <div class="image_text_cta_content_container">
            {% if section.settings.eyebrow != blank %}
            <p class="image-text-cta__eyebrow">{{ section.settings.eyebrow }}</p>
            {% endif %}

            {% if section.settings.heading != blank %}
            <h2 class="image-text-cta__heading {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
            {% endif %}

            {% if section.settings.text != blank %}
            <div class="image-text-cta__text rte">{{ section.settings.text }}</div>
            {% endif %}

            {% if section.settings.button_label != blank %}
                <a
                {% if section.settings.button_link == blank %}
                role="link" aria-disabled="true"
                {% else %}
                href="{{ section.settings.button_link }}"
                {% endif %}
                class="button{% if section.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                >
                {{ section.settings.button_label | escape }}
                </a>
                {% endif %}
        </div>
      </div>

    </div>
  </div>
</section>

{% style %}
.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.mpadding_top }}px;
  padding-bottom: {{ section.settings.mpadding_bottom  }}px;
}
.custom-page-width{
  max-width:{{ section.settings.custom_page_width }}px;
  width:100%;
  margin:auto;
  padding:0 20px;
}
@media screen and (min-width: 769px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}

.image-text-cta__grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 3rem;
  align-items: center;
}
.image_text_cta_content_container{
    max-width: 452px;
    width:100%;
    text-align:center;
}


@media screen and (min-width: 750px) {
  .image-text-cta__grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .image-text-cta__grid--right {
    direction: rtl;
  }

  .image-text-cta__grid--right > * {
    direction: ltr;
  }
}

.image-text-cta__image {
  width: 100%;
  height: auto;
  border-radius: 12px;
}

.image-text-cta__eyebrow {
    font-size: 30px;
    letter-spacing: 0;
    margin: 0 0 10px;
    font-family: var(--font-subheading-family);
    line-height:normal;
}

.image-text-cta__heading {
    margin-bottom: 30px;
    margin-top: 0;
    font-size:30px;
}
.image_text_cta_content_container .button{
    max-width: 194px;
    width: 100%;
    min-height: 45px;
}
.image-text-cta__text {
  margin-bottom: 2rem;
}
@media screen and (max-width: 1024px) {
  .image-text-cta__eyebrow{
        font-size: 22px;
  }
  .image-text-cta__heading {
      margin-bottom: 20px;
      margin-top: 0;
      font-size: 22px;
  }
}
@media screen and (max-width: 749px) {
    .image-text-cta__eyebrow , 
    .image-text-cta__heading{
        font-size: 20px;
    }
}
{% endstyle %}

