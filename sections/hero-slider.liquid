<style>
  .hero-section-{{ section.id }} {
    width: 100%;
    /* height: {{ section.settings.section_height }}vh; */
    height: 100%;
    max-height: {{ section.settings.min_height }}px;
    position: relative;
    overflow: hidden;
    aspect-ratio: 4/3;
  }

  .hero-swiper-{{ section.id }} {
    width: 100%;
    height: 100%;
  }

  .hero-swiper-{{ section.id }} .swiper-slide {
    position: relative;
    display: flex;
    align-items: {{ section.settings.content_vertical_alignment }};
    justify-content: {{ section.settings.content_horizontal_alignment }};
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .hero-swiper-{{ section.id }} .slide-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    display: inline-flex;
  }

  .hero-swiper-{{ section.id }} .slide-content {
    position: relative;
    z-index: 2;
    color: {{ section.settings.text_color }};
    max-width: {{ section.settings.content_width }}px;
    padding: 0 {{ section.settings.content_padding }}px;
    text-align: {{ section.settings.text_alignment }};
  }

  .hero-swiper-{{ section.id }} .slide-pretitle {
        color: #FFF;
    font-family: "Helvetica Neue";
    font-size: 60px;
    font-style: normal;
    font-weight: 900;
    line-height: 80px;
    letter-spacing: 6px;
    text-transform: uppercase;
    opacity: 0;
    transform: translateY(30px);
     font-weight: 900;
  }

  .hero-swiper-{{ section.id }} .slide-title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    line-height: 1.1;
    margin-bottom: 20px;
    opacity: 0;
    transform: translateY(30px);
    margin: 0 0 10px; 
    color: #FFF;
font-size: 70px;
font-style: normal;
font-weight: 700;
line-height: 80px; 
  }

  .hero-swiper-{{ section.id }} .slide-description {
    font-size: {{ section.settings.description_size }}px;
    line-height: 1.6;
    margin-bottom: 35px;
    opacity: 0;
    transform: translateY(30px);
    font-family: "Instrument Serif";
    font-size: 30px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    margin: 0;
  }

  .hero-swiper-{{ section.id }} .slide-button {
    display: inline-block;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    background: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    font-weight: {{ section.settings.button_weight }};
    font-size: {{ section.settings.button_size }}px;
    border-radius: {{ section.settings.button_radius }}px;
    transition: all 0.8s ease;
    opacity: 0;
    transform: translateY(30px);
    cursor: pointer;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
        margin-top: 40px;
    padding: 0 30px;
    min-height: 45px;
    display: inline-flex;
    align-items: center;
    color: #191B1D;
    text-align: center;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    font-family: "Helvetica Neue";
    border-radius: 12px;
    overflow: hidden;
  }

 .hero-swiper-{{ section.id }} .slide-button::before {
    content: "";
    background-color: #000;
    width: 0;
    height: 100%;
    position: absolute;
    right: 0;
    top: 0px;
    border-radius: 3px;
    transition: all 0.4s 0.3s ease-in-out;
    z-index: -1;
}

.hero-swiper-{{ section.id }} .slide-button:hover::before {
    width: 100%;
    height: 100%;
    left: 0;
    bottom: 0px;
}

.hero-swiper-{{ section.id }} .slide-button:hover {
  color: #fff;
}

  @keyframes fadeInUp-{{ section.id }} {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-swiper-{{ section.id }} .swiper-slide-active .slide-pretitle {
    animation: fadeInUp-{{ section.id }} 0.8s ease forwards 0.3s;
  }

  .hero-swiper-{{ section.id }} .swiper-slide-active .slide-title {
    animation: fadeInUp-{{ section.id }} 0.8s ease forwards 0.5s;
  }

  .hero-swiper-{{ section.id }} .swiper-slide-active .slide-description {
    animation: fadeInUp-{{ section.id }} 0.8s ease forwards 0.7s;
  }

  .hero-swiper-{{ section.id }} .swiper-slide-active .slide-button {
    animation: fadeInUp-{{ section.id }} 0.8s ease forwards 0.9s;
  }

  /* Navigation Styles */
  .hero-swiper-{{ section.id }} .swiper-button-next,
  .hero-swiper-{{ section.id }} .swiper-button-prev {
    color: {{ section.settings.navigation_color }};
    width: 50px;
    height: 50px;
    background: {{ section.settings.navigation_background }};
    border-radius: 50%;
    transition: all 0.3s ease;
  }

  .hero-swiper-{{ section.id }} .swiper-button-next:hover,
  .hero-swiper-{{ section.id }} .swiper-button-prev:hover {
    background: {{ section.settings.navigation_background_hover }};
    transform: scale(1.1);
  }

  .hero-swiper-{{ section.id }} .swiper-button-next::after,
  .hero-swiper-{{ section.id }} .swiper-button-prev::after {
    font-size: 20px;
  }

  /* Pagination Styles */
  .hero-swiper-{{ section.id }} .swiper-pagination-bullet {
    width: 30px;
    height: 5px;
    background: {{ section.settings.pagination_color }};
    opacity: 0.5;
    transition: all 0.3s ease;
    border-radius: 300px;

  }

  .hero-swiper-{{ section.id }} .swiper-pagination-bullet-active {
    opacity: 1;
    width: 30px;
    border-radius: 6px;
    background: {{ section.settings.pagination_active_color }};
  }

  .hero-swiper__main .page-width {
        width: 100%;
    max-width: 1280px;
    }

.hero-swiper__main .swiper-pagination {
    display: flex;
    align-items: center;
    justify-content: center;
    bottom: 37px;
}


