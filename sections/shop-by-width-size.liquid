{% comment %}
  Shop by Width and Size Section
  Dynamic section with customizable backgrounds and filter options
{% endcomment %}

<div class="shop-filter-wrapper">
  <!-- Shop by Width Section -->
  <div class="frame-parent first_frame_parent" style="background-image: url('{{ section.settings.width_background_image | image_url }}');">
    <div
  class="overlay-background"
  style="--overlay-opacity: {{ section.settings.width_overlay_opacity | divided_by: 100.0 }};">
</div>
    <div class="frame-content">
    <div class="shop-by-width-parent">
      <h2 class="shop-by-width">{{ section.settings.width_title }}</h2>
      {% if section.settings.width_show_shop_all %}
      <a href="{{ section.settings.width_shop_all_link }}" class="shop-all-parent">
        <span class="shop-all">{{ section.settings.width_shop_all_text }}</span>
        <svg class="arrow-up-right-icon" width="22" height="22" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M7 17L17 7M17 7H7M17 7V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
      {% endif %}
    </div>
    <div class="frame-group">
      {% for block in section.blocks %}
        {% if block.type == 'width_option' %}
        <a href="{{ block.settings.link }}" class="width-wrapper">
          <span class="option-text">{{ block.settings.label }}</span>
        </a>
        {% endif %}
      {% endfor %}
    </div>
    </div>
  </div>

  <!-- Shop by Size Section -->
  <div class="frame-parent second_frame_parent" style="background-image: url('{{ section.settings.size_background_image | image_url }}');">
    
<div
  class="overlay-background"
  style="--overlay-opacity: {{ section.settings.size_overlay_opacity | divided_by: 100.0 }};">
</div>

    <div class="frame-content">    <div class="shop-by-size-parent">
      <h2 class="shop-by-size">{{ section.settings.size_title }}</h2>
      {% if section.settings.size_show_shop_all %}
      <a href="{{ section.settings.size_shop_all_link }}" class="shop-all-parent">
        <span class="shop-all">{{ section.settings.size_shop_all_text }}</span>
        <svg class="arrow-up-right-icon" width="22" height="22" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M7 17L17 7M17 7H7M17 7V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
      {% endif %}
    </div>
    <div class="frame-group">
      {% for block in section.blocks %}
        {% if block.type == 'size_option' %}
        <a href="{{ block.settings.link }}" class="size-wrapper">
          <span class="option-text">{{ block.settings.label }}</span>
        </a>
        {% endif %}
      {% endfor %}
    </div>
    </div>
  </div>
</div>

<style>
.shop-filter-wrapper {
  display: flex;
  flex-flow: row wrap;
  gap: 0;
  width: 100%;
}

.frame-parent {
  width: 50%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 30px 80px;
  box-sizing: border-box;
  gap: 262px;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: top;
  text-align: left;
  font-size: 38px;
  color: #fff;
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
}
.frame-parent.first_frame_parent {
    width: 49.3%;
}
.frame-parent.second_frame_parent {
   width: 50.7%;
}
.overlay-background {
  position: absolute;
  inset: 0;
  background-color: rgba(0, 0, 0, var(--overlay-opacity));
  z-index: 1;
}

.frame-content {
  position: relative;
  z-index: 2;
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 262px;
  height: 100%;
    justify-content: center;
}

.shop-by-width-parent,
.shop-by-size-parent {
  align-self: stretch;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20px;
  flex-shrink: 0;
}

.shop-by-width,
.shop-by-size {
    position: relative;
    font-size: 38px;
    font-weight: 500;
    font-family: 'Helvetica Neue';
    color: #fff;
    text-align: left;
    font-family: 'Helvetica Neue';
    color: #fff;
    text-align: left;
    margin: 0;
    line-height: 46px;
}

.shop-all-parent {
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  text-align: center;
  font-size: 16px;
  text-decoration: none;
  color: #fff;
  text-underline-offset: 2px;
  transition: opacity 0.3s ease;
}

.shop-all-parent:hover {
  opacity: 0.8;
}

.shop-all {
  position: relative;
  text-decoration: underline;
  text-transform: uppercase;
  font-weight: 500;
}

.arrow-up-right-icon {
  width: 22px;
  position: relative;
  max-height: 100%;
}

.frame-group {
  display: flex;
  align-items: flex-start;
  flex-wrap: wrap;
  align-content: flex-start;
  gap: 10px;
  flex-shrink: 0;
  text-align: center;
  font-size: 16px;
}

.width-wrapper,
.size-wrapper {
  letter-spacing:0;
  backdrop-filter: blur(26px);
  border-radius: 12px;
  background-color: rgba(255, 255, 255, 0.29);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8px 20px;
  text-decoration: none;
  color: #fff;
  transition: all 0.3s ease;
  cursor: pointer;
}

.width-wrapper:hover,
.size-wrapper:hover {
  background-color: rgba(255, 255, 255, 0.45);
  transform: translateY(-2px);
}

.frame-parent:first-child {
      padding-left: calc(50% - 1280px / 2);
      padding-right: 80px;
}

.frame-parent:last-child {
    background-position: 50% 72%;
        padding-right: calc(50% - 1280px / 2);
}

.option-text {
  position: relative;
  text-transform: uppercase;
  font-weight: 500;
  white-space: nowrap;
  font-size: 16px;
  letter-spacing: 0.06px;
}

@media screen and (max-width: 1300px) {
  .frame-parent:first-child {
    padding-left: 50px;
  }
  .shop-by-width, .shop-by-size{
        font-size: 34px;
  }
  .frame-parent.first_frame_parent {
      width: 50%;
  }
  .frame-parent.second_frame_parent {
    width: 50%;
  }
  .frame-parent:last-child {
    padding-right: 50px;
            padding-left: 49px
}

.frame-parent {
  aspect-ratio: 4/4;
}
 }

 @media screen and (max-width: 991px) { 
  .frame-parent {
    width: 100%;
    aspect-ratio: 4 / 2
}
.frame-parent.first_frame_parent {
    width: 100%;
}
.frame-parent.second_frame_parent {
   width: 100%;
}
.frame-content {
  gap: 100px;
}
 }
@media screen and (max-width: 768px) {
  
  .shop-by-width-parent,
  .shop-by-size-parent {
    align-self: stretch;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
    flex-shrink: 0;
  }
  .frame-parent {
    padding:20px;
    height: 400px;
  }

  .frame-parent:first-child, .frame-parent:last-child {
    padding-left: 20px;
    padding-right: 20px;
}
  
  .frame-content {
    gap: 150px;
  }
  
  .shop-by-width,
  .shop-by-size {
    font-size: 22px;
    line-height: 22px;
    font-weight: 500;  
}
  
  .frame-group {
    max-width: 100%;
  }
}

@media screen and (max-width: 480px) {
  .frame-parent {
    height: 350px;
  }
  
  .frame-content {
    gap: 120px;
  }
  @media screen and (max-width: 768px) {
  .shop-all {
    font-size: 14px;
  }
  
  .option-text {
    font-size: 14px;
  }
  
  .width-wrapper,
  .size-wrapper {
    padding: 6px 16px;
  }
}
</style>

