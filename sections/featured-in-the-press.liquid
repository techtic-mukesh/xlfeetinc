        {
            "type": "color_scheme",
            "id": "block_color_scheme",
           "label": "Block Color Scheme"
        }
      ]
    },
    {
      "type": "image_with_text",
      "name": "Image With Text",
      "settings": [
        {
            "type": "image_picker",
            "id": "left_side_img",
            "label": "Left Side Image"
        },
        {
            "type": "header",
            "content": "Right Side Image With Text Block"
