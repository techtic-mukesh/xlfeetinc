{% comment %}
Customer Feedback Section with Swiper
Responsive design for desktop and mobile
{% endcomment %}


<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
   
    background-color: rgba(244, 244, 244, 0.5);
  }
  

  /* ===============================
  Customer Feedback Section
  ================================ */
  .feedback-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 50px;
    flex-wrap: wrap;
    gap: 20px;
  }

  .fh-header-left {
    flex: 1;
  }

  .fh-header-right {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .customer-feedback-section {
    position: relative;
    overflow: hidden;
  }

  /* ===============================
  Background Text - Full Screen Width
  ================================ */
  .feedback-bg-text {
   position: relative;
    width: 100%;
    overflow: visible;
    pointer-events: none;
    text-align: center;
    margin-top: 0;
    box-sizing: border-box;
    position: absolute;
    bottom: 0;
  }

  .feedback-bg-text span { 
    display: block;
    font-size: clamp(24px, 8vw, 140px);
    font-weight: 700;
    font-family: 'Helvetica Neue', Arial, sans-serif;
    color: transparent;
    -webkit-text-stroke: 1.5px #e0e0e0;
    text-stroke: 1.5px #e0e0e0;
    letter-spacing: 0.05em;
    white-space: nowrap;
    text-align: center;
    line-height: 1;
    width: 100%;
  }

  /* ===============================
  Container
  ================================ */
  .feedback-container {
    max-width: 1320px;
    margin: 0 auto;
    position: relative;
    z-index: 10;
  }

  .feedback-content {
    position: relative;
    z-index: 2;
  }

  /* ===============================
  Header
  ================================ */
  .feedback-subtitle {
    font-size: 30px;
    font-family: 'Instrument Serif';
    color: #191b1d;
    text-align: left;
    margin: 0;
  }

  .feedback-title {
    font-size: 46px;
    font-weight: 500;
    font-family: 'Helvetica Neue';
    color: #000;
    text-align: left;
    margin: 0;
  }

  /* ===============================
  Navigation Buttons
  ================================ */
  .feedback-nav .fc-arrows {
    display: flex;
    gap: 10px;
  }

  .feedback-nav .fc-arrow {
       width: 50px;
    height: 50px;
    background: url();
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
    border-radius: 25px;
    border: 1px solid #425365;
  }


  .feedback-nav .fc-arrow.swiper-button-disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .feedback-nav .fc-arrow svg {
    width: 24px;
    height: 24px;
  }

  /* ===============================
  Swiper Container
  ================================ */
  .reviews-swiper {
    padding-bottom: 20px;
  }

  .swiper-wrapper {
    display: flex;
  }

  /* ===============================
  Review Card
  ================================ */
  .review-card {
    border-radius: 20px;
border: 0.5px solid #D8D8D8;
background: #FFF;
height: auto;
padding: 30px;
  }

  /* ===============================
  Stars
  ================================ */
  .review-stars {
    display: flex;
    gap: 0.25rem;
    margin: 0;
  }

  .star-icon {
    width: 18px;
    height: 18px;
    color: #e5e5e5;
  }

  .star-icon.filled {
    color: #fbbf24;
  }

  /* ===============================
  Text Content
  ================================ */
  .review-title {
    font-size: 20px;
    font-weight: 500;
    font-family: 'Helvetica Neue';
    color: #000;
    text-align: left;
    padding: 15px 0;
    margin: 0;
  }

  .review-text {
    font-size: 16px;
    line-height: 24px;
    font-weight: 300;
    font-family: 'Helvetica Neue';
    color: #646464;
    text-align: left;
    padding: 0 0 20px;
    margin: 0;
  }

  .review-author {
    font-size: 16px;
    font-weight: 500;
    font-family: 'Helvetica Neue';
    color: #000;
    text-align: left;
    margin: 0;
  }

  /* ===============================
  Swiper Pagination
  ================================ */
  /* ===============================
  Helpers
  ================================ */
  .desktop-only {
    display: flex;
    gap: 10px;
  }

  .mobile-only {
    display: none;
  }

  /* ===============================
  Mobile Styles
  ================================ */
  @media (max-width: 768px) {
    

    .feedback-bg-text {
        display: block;
        margin-top: 0;
        left: -25%;
    }

    .feedback-bg-text span {
      font-size: 50px;
        letter-spacing: 0.03em;
        text-align: center;
        -webkit-text-stroke-width: 0.43px;
        -webkit-text-stroke-color: #E5E5E5;
        font-family: "Helvetica Neue";
        font-size: 50px;
        font-style: normal;
        font-weight: 700;
        line-height: 50px;
        letter-spacing: 5px;
    }

    .feedback-header {
      text-align: center;
      margin-bottom: 2.5rem;
    }

    .feedback-title {
        text-align: center;
        font-size: 22px;
        line-height: 22px;
    }

    .fh-header-right {
    display: none;
}

    .desktop-only {
      display: none;
    }

    .mobile-only {
      display: flex;
    }

    .customer-feedback-section {
      padding-top: 30px;
    padding-bottom: 66px;
}

.fh-header-left {
    width: 100%;
    text-align: center;
    flex: 0 0 100%;
}

.feedback-subtitle {
    text-align: center;
    font-size: 22px;
    line-height: 18px;
    margin-bottom: 10px;
}

    .review-card {
      padding: 20px;
    }

    .review-title {
    font-size: 14px;
}

.review-text {
    font-size: 14px;
    line-height: 20px;
}

.review-author {
    font-size: 14px;
    line-height: 14px;
}

  }

  /* ===============================
  Tablet Styles
  ================================ */
  @media (min-width: 769px) and (max-width: 1024px) {
    .feedback-title {
      font-size: 2rem;
    }

    .feedback-bg-text span {
      font-size: clamp(60px, 8vw, 120px);
    }
  }
</style>

<section class="section-{{ section.id }}-padding customer-feedback-section">
  <div class="page-width">
    <div class="feedback-content">
      <!-- Header -->
      <div class="feedback-header">
        <div class="fh-header-left">
          <p class="feedback-subtitle">{{ section.settings.subtitle }}</p>
          <h2 class="feedback-title">{{ section.settings.title }}</h2>
        </div>
        <div class="fh-header-right">
          <div class="feedback-nav desktop-only fc-arrows">
            <button type="button" class="fc-arrow fc-arrow-prev swiper-button-prev-{{ section.id }}" aria-label="Previous">
              <span class="svg-wrapper">
                <svg xmlns="http://www.w3.org/2000/svg" width="17" height="9" viewBox="0 0 17 9" fill="none">
                  <path d="M0.5 4.5H16.5M0.5 4.5L4.5 0.5M0.5 4.5L4.5 8.5" stroke="black" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            </button>
            <button type="button" class="fc-arrow fc-arrow-next swiper-button-next-{{ section.id }}" aria-label="Next">
              <span class="svg-wrapper">
               <svg xmlns="http://www.w3.org/2000/svg" width="17" height="9" viewBox="0 0 17 9" fill="none">
                <path d="M0.5 4.5H16.5M16.5 4.5L12.5 0.5M16.5 4.5L12.5 8.5" stroke="black" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              </span>
            </button>
          </div>
        </div>
      </div>

      <!-- Swiper Container -->
      <div class="swiper reviews-swiper swiper-{{ section.id }}">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
          <div class="swiper-slide" {{ block.shopify_attributes }}>
            <div class="review-card">
              <!-- Star Rating -->
              <div class="review-stars">
                {% for i in (1..5) %}
                  {% if i <= block.settings.rating %}
                  <svg class="star-icon filled" width="18" height="18" viewBox="0 0 18 18" fill="currentColor">
                    <path d="M9 1.5L11.5 6.5L17 7.5L13 11.5L14 17L9 14.5L4 17L5 11.5L1 7.5L6.5 6.5L9 1.5Z"/>
                  </svg>
                  {% else %}
                  <svg class="star-icon" width="18" height="18" viewBox="0 0 18 18" fill="currentColor">
                    <path d="M9 1.5L11.5 6.5L17 7.5L13 11.5L14 17L9 14.5L4 17L5 11.5L1 7.5L6.5 6.5L9 1.5Z"/>
                  </svg>
                  {% endif %}
                {% endfor %}
              </div>

              <!-- Review Title -->
              <h3 class="review-title">{{ block.settings.review_title }}</h3>

              <!-- Review Text -->
              <p class="review-text">{{ block.settings.review_text }}</p>

              <!-- Author -->
              <p class="review-author">-{{ block.settings.author_name }}</p>
            </div>
          </div>
          {% endfor %}
        </div>

        <!-- Pagination (Mobile) -->
        <div class="swiper-pagination swiper-pagination-{{ section.id }}"></div>
      </div>
    </div>
  </div>

  <!-- Large Background Text -->
  <div class="feedback-bg-text">
    <span>CUSTOMER FEEDBACK</span>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const sectionId = '{{ section.id }}';
  
  const swiper = new Swiper('.swiper-' + sectionId, {
    slidesPerView: 1,
    spaceBetween: 16,
    loop: false,
    speed: 500,
    
    // Navigation arrows
    navigation: {
      nextEl: '.swiper-button-next-' + sectionId,
      prevEl: '.swiper-button-prev-' + sectionId,
    },
    
   
    
    // Responsive breakpoints
    breakpoints: {
      // Mobile
      320: {
        slidesPerView: 1.2,
        spaceBetween: 16
      },
      // Tablet
      769: {
        slidesPerView: 2,
        spaceBetween: 20
      },
      // Desktop
      1025: {
        slidesPerView: 3,
        spaceBetween: 20
      }
    }
  });
});
</script>

