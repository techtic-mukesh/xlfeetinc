{% style %}
 .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.mpadding_top }}px;
    padding-bottom: {{ section.settings.mpadding_bottom }}px;
}

@media screen and (min-width: 769px) {
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    }
}
.bottom-feature-grid-{{ section.id }} {
  background: rgb(var(--color-background));
  color: rgb(var(--color-foreground));
}

.custom_top_header_section{
text-align: center;
  max-width:{{ section.settings.custom_page_width }}px;
  width:100%;
  margin:auto;
  padding:0 20px;
}

.bottom-feature-grid-{{ section.id }} .pill-buttons {
  display: flex;
  justify-content: center;
  gap: 2rem;
  margin-bottom: 1.5rem;
}

.bottom-feature-grid-{{ section.id }} .pill {
  padding: 8px 18px;
  border-radius: 999px;
  border: 1px solid rgba(var(--color-foreground), 0.2);
  font-size: 14px;
  font-weight: 500;
}

.bottom-feature-grid-{{ section.id }} .grid {
  display: grid;
  grid-template-columns: repeat({{ section.settings.grid_columns }}, 1fr);
  gap: 20px;
}


.bottom-feature-grid-{{ section.id }} .card {
  background: rgb(var(--color-background));
  border-radius: 12px;
  position:relative;
  overflow: hidden;
  line-height:0;
}

.bottom-feature-grid-{{ section.id }} .card img {
  width: 100%;
  height: 350px;
  object-fit: cover;
  max-width: 100%;
}

.bottom-feature-grid-{{ section.id }} .card-content {
    padding: 0 26px 26px 20px;
    position: absolute;
    bottom: 0;
}

.bottom-feature-grid-{{ section.id }} .card-content h3 {
    font-size: 20px;
    font-weight: 700;
    color: #fff;
    letter-spacing: 0;
    margin:0;
    line-height:24px;
}

.bottom-feature-grid-{{ section.id }} .card-content p {
  font-size: 14px;
  opacity: 0.8;
}
.bottom-feature-grid-{{ section.id }} .comp_heighlight_heading img {
    max-width: {{ section.settings.heading_img_width }}px;
    width:100%;
}
span.registered{
    font-size: 30px;
    vertical-align: super;
    position: relative;
    top: 17px;
    line-height: 0;
}
.main_comp_heighlight_heading{
    color: rgba(var(--color-foreground), 1);
    font-weight: 500;
    letter-spacing: 0;
}
@media screen and (max-width: 1024px) {
  .bottom-feature-grid-{{ section.id }} .card-content h3 {
      font-size: 16px;
      line-height: 22px;
  }
  .main_comp_heighlight_heading{
    font-size: 14px;
  }
  .bottom-feature-grid-{{ section.id }} .comp_heighlight_heading img {
    max-width: 30px;
    width:100%;
  }
}
@media screen and (max-width: 989px) {
  .bottom-feature-grid-{{ section.id }} .grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media screen and (max-width: 749px) {
  .bottom-feature-grid-{{ section.id }} .comp_heighlight_heading img {
    max-width: 30px;
    width: 100%;
}
  .bottom-feature-grid-{{ section.id }} .grid {
    grid-template-columns: 1fr;
  }
  .bottom-feature-grid-{{ section.id }} .pill-buttons {
    flex-wrap: wrap;
  }
}

{% endstyle %}

<section class="bottom-feature-grid-{{ section.id }} color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="page-width">
 
    <div class="section-header custom_top_header_section">
    <div>
        <div class="comp_heighlight_heading color-{{ section.settings.heading_block_color_scheme }}">
           {% if section.settings.heading_img !=blank %} <img src="{{ section.settings.heading_img | img_url  : 'master' }}"> {% endif %}
            <span class="main_comp_heighlight_heading">
                {{ section.settings.company_heading | replace: "®", "<span class='registered'>®</span>"  }}
            </span>
        </div>
    </div>
      {% if section.settings.show_pills %}
        <div class="pill-buttons">
          {% for block in section.blocks %}
            {% if block.settings.year  %}
            <div class="block-{{block.id }} custom_timeline_block">
                <div class="timeline-item color-{{ block.settings.block_color_scheme }}">
                    <h2>{{ block.settings.year }}</h2>
                </div>
                <span>{{ block.settings.description }}</span>
                <div class="time_line_extra_content"> {{ block.settings.extra_content_block }}</div>
                </div>
              
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
      <div class="comp_heighlight_description">
        {% if section.settings.description != blank %}
            <div>{{ section.settings.description }}</div>
        {% endif %}
      </div>
    </div>

    <div class="grid">
      {% for block in section.blocks %}
        {% if block.type == 'card' %}
          <div class="card">
            {% if block.settings.image %}
              {{ block.settings.image | image_url: width: 600 | image_tag }}
            {% endif %}
            <div class="card-content">
              <h3>{{ block.settings.title }}</h3>
              <p>{{ block.settings.text }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Company Highlights",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "image_picker",
      "id": "heading_img",
      "label": "Heading Image"
    },
    {
      "type": "range",
      "id": "heading_img_width",
      "label": "Heading Image Width (px)",
      "min": 20,
      "max": 100,
      "step": 1,
      "default": 50
    },
    {
      "type": "text",
      "id": "company_heading",
      "label": "Heading",
      "default": "Our Journey & Presence"
    },
    {
     "type":"color_scheme",
     "id": "heading_block_color_scheme",
     "label": "Heading Color Scheme"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {  
        "type": "range",
        "id": "custom_page_width",
        "min": 1000,
        "max": 1400,
        "step": 4,
        "default": 1200,
        "unit": "px",
        "label": "Content Page Width"
    },
    {
      "type": "checkbox",
      "id": "show_pills",
      "label": "Show pill buttons",
      "default": true
    },
    {
      "type": "header",
      "content": "Image Grid"
    },
    {
    "type": "range",
    "id": "grid_columns",
    "label": "Desktop columns",
    "min": 1,
    "max": 4,
    "step": 1,
    "default": 4
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "header",
      "content": "Moblie padding"
    },
    {
      "type": "range",
      "id": "mpadding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 30
    },
    {
      "type": "range",
      "id": "mpadding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 30
    }
  ],
  "blocks": [
    {
      "type": "pill",
      "name": "Pill Button",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "year",
          "label": "Year",
          "default": "1990"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Age 7, Size 7"
        },
        {
            "type": "richtext",
            "id": "extra_content_block",
            "label": "Extra Content"
        },
        {
            "type": "color_scheme",
            "id": "block_color_scheme",
           "label": "Block Color Scheme"
        }
      ]
    },
    {
      "type": "card",
      "name": "Image Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Card title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Company Highlights",
      "blocks": [
        { "type": "pill" },
        { "type": "pill" },
        { "type": "pill" },
        { "type": "card" },
        { "type": "card" },
        { "type": "card" },
        { "type": "card" }
      ]
    }
  ]
}
{% endschema %}
