{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
  }
 
  
  /* Custom Collection List Styles */
  .cl-section-{{ section.id }} .cl-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    flex-wrap: wrap;
    gap: 20px;
  }

  .cl-section-{{ section.id }} .cl-header-left {
    flex: 1;
  }

  .cl-section-{{ section.id }} .cl-subtitle {
    font-size: 30px;
    font-family: 'Instrument Serif';
    color: #191b1d;
    margin: 0;
    line-height:normal;
    /* font-style: italic; */
  }

  .cl-section-{{ section.id }} .cl-title {
   font-size: 46px;
  font-weight: 500;
  font-family: 'Helvetica Neue';
  color: #000;
  text-align: left;
  display: inline-block;
  margin: 0;
  line-height: normal;
  }

  .cl-section-{{ section.id }} .cl-header-right {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .cl-section-{{ section.id }} .cl-view-all-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 0 30px;
        min-height: 52px;
    border: 1px solid #000;
    border-radius: 12px;
    background: #fff;
    color: #000;
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    font-family: 'Helvetica Neue';
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
  }

  .cl-section-{{ section.id }} .cl-view-all-btn svg path {transition: all 0.3s ease; }

  .cl-section-{{ section.id }} .cl-view-all-btn:hover {
    background: #000;
    color: #fff;
  }

  .cl-section-{{ section.id }} .cl-view-all-btn:hover  svg path { stroke: #fff;}

  .cl-section-{{ section.id }} .cl-arrows {
    display: flex;
    gap: 10px;
  }

  .cl-section-{{ section.id }} .cl-arrow {
    width: 40px;
    height: 40px;
    border: 1px solid #ddd;
    border-radius: 50%;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .cl-section-{{ section.id }} .cl-arrow:hover {
    border-color: #000;
  }

  .cl-section-{{ section.id }} .cl-arrow svg {
    width: 22px;
    height: 22px;
  }

  /* Grid Layout */
  .cl-section-{{ section.id }} .cl-collections-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: 20px;
  }

  /* Slider Layout */
  .cl-section-{{ section.id }} .cl-collections-slider {
    display: flex;
    gap: 20px;
    overflow-x: auto;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
    cursor: grab;
    user-select: none;
        padding-left: calc(50% - 1280px / 2);
  }

  .cl-section-{{ section.id }} .cl-collections-slider::-webkit-scrollbar {
    display: none;
  }

  .cl-section-{{ section.id }} .cl-collections-slider.dragging {
    cursor: grabbing;
    scroll-behavior: auto;
  }

  .cl-section-{{ section.id }} .cl-collections-slider .cl-collection-card {
    width: {{ section.settings.card_width }}px;
    min-width: {{ section.settings.card_width }}px;
    flex: 0 0 auto;
  }

  /* Collection Card */
  .cl-section-{{ section.id }} .cl-collection-card {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
  }

  .cl-section-{{ section.id }} .cl-collection-image-wrapper {
    position: relative;
    height: {{ section.settings.card_height }}px;
    overflow: hidden;
  }

  .cl-section-{{ section.id }} .cl-collection-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
    pointer-events: none;
  }

  .cl-section-{{ section.id }} .cl-collection-card:hover .cl-collection-image {
    transform: scale(1.05);
  }

  /* Overlay gradient */
  .cl-section-{{ section.id }} .cl-collection-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(180deg, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.3) 100%);
    pointer-events: none;
    display:block;
  }

  /* Collection Title - Top Left */
  .cl-section-{{ section.id }} .cl-collection-title {
    position: absolute;
    top: 20px;
    left: 20px;
    font-size: 30px;
    font-family: 'Instrument Serif';
    color: #fff;
    text-align: left;
    display: flex;
    align-items: center;
    margin: 0;
    text-shadow: 0 1px 3px rgba(0,0,0,0.3);
    z-index: 2;
  }

  /* Shop Now Link - Bottom Left */
  .cl-section-{{ section.id }} .cl-collection-link {
    position: absolute;
    bottom: 20px;
    left: 20px;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-shadow: 0 1px 3px rgba(0,0,0,0.3);
    z-index: 2;
    transition: all 0.2s ease;
    border-radius: 12px;
    display: flex;
    align-items: center;
    padding: 15px 0px;
    box-sizing: border-box;
    gap: 10px;
    text-align: center;
    font-size: 16px;
    color: #fff;
    font-family: 'Helvetica Neue';
  }

  .cl-section-{{ section.id }} .cl-collection-link:hover {
    gap: 10px;
  }

  .cl-section-{{ section.id }} .cl-collection-link svg {
    width: 22px;
    height: 22px;
    transition: transform 0.2s ease;
  }

  .cl-section-{{ section.id }} .cl-collection-link:hover svg {
    transform: translate(3px, -3px);
  }

    @media screen and (max-width: 1300px) {
      
    .cl-section-{{ section.id }} .cl-collections-slider {
      padding-left:50px;
    }
    }

  /* Responsive */
  @media screen and (max-width: 989px) {
    .cl-section-{{ section.id }} .cl-collections-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .cl-section-{{ section.id }} .cl-collections-slider .cl-collection-card {
      width: 280px;
      min-width: 280px;
    }

    .cl-section-{{ section.id }} .cl-collection-image-wrapper {
      height: 350px;
    }
  }

  @media screen and (max-width: 749px) {
    .cl-section-{{ section.id }} .cl-subtitle {
      font-size: 22px;
      /* line-height: 18px; */
  }
    .cl-section-{{ section.id }} .cl-collections-grid {
      display: grid !important;
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: 15px;
    }

    .cl-section-{{ section.id }} .cl-collections-grid .cl-collection-card {
      width: 100% !important;
      min-width: unset !important;
    }

    /* When mobile swipe is disabled, convert slider to grid on mobile */
    {%- unless section.settings.swipe_on_mobile -%}
    .cl-section-{{ section.id }} .cl-collections-slider {
      display: grid !important;
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: 15px;
      overflow-x: visible;
      cursor: default;
              padding: 0 15px;

    }

    .section-{{ section.id }}-padding {
      padding: 30px 0;
    }

    .cl-section-{{ section.id }} .cl-collections-slider .cl-collection-card {
      width: 100% !important;
      min-width: unset !important;
    }

    .cl-section-{{ section.id }} .cl-collections-slider .cl-collection-image-wrapper {
      height: 250px;
    }
    {%- endunless -%}

    {%- if section.settings.swipe_on_mobile -%}
    .cl-section-{{ section.id }} .cl-collections-slider .cl-collection-card {
      width: 240px;
      min-width: 240px;
    }
    {%- endif -%}

    .cl-section-{{ section.id }} .cl-collection-image-wrapper {
      height: 300px;
    }

    .cl-section-{{ section.id }} .cl-collections-grid .cl-collection-image-wrapper {
      height: 250px;
    }

    .cl-section-{{ section.id }} .cl-header {
      flex-direction: column;
    }

    .cl-section-{{ section.id }} .cl-title {
      font-size: 22px;
      line-height: 22px;
      font-weight: 500;
    }
    .cl-section-{{ section.id }} .cl-view-all-btn {
      font-size: 14px;
      padding: 10px 30px;
    }
    .cl-section-{{ section.id }} .cl-arrows {
      display: none;
    }

    .cl-section-{{ section.id }} .cl-collection-title {
      font-size: 18px;
      line-height: 18px;
      font-family: 'Instrument Serif';
      color: #fff;
      top: 15px;
      left: 15px;
    }

    .cl-section-{{ section.id }} .cl-collection-link {
      bottom: 15px;
      left: 15px;
      font-size: 14px;
    }
  }

  /* Hide default slider buttons */
  .cl-section-{{ section.id }} .slider-buttons {
    display: none !important;
  }
{%- endstyle -%}

{%- liquid
