{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Summary card */
  .cart-summary {
    border: 1px solid #D9D9D9;
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 24px;
    background: #fff;
  }
  .cart-summary h3 {
    margin: 0 0 8px;
    font-size: 18px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: .5px;
    font-family: "HelveticaNeue-BlackExt";
  }
  .cart-summary > p {
    font-size: 16px;
    margin: 0 0 20px;
    font-weight: 300;
    letter-spacing: 0;
    line-height: 20px;
  }

  /* Inputs */
  .cart-summary .field { 
    margin-bottom: 12px;
    border: none;
    flex-direction: column; }
  .cart-summary label {
    display: block;
    font-size: 16px;
    font-weight: 700;
    margin-bottom: 10px;
    color: rgba(var(--color-foreground), 1);
  }
  .cart-summary  .field:after ,   .cart-summary .field:hover.field:after{
    box-shadow:unset;
  }
  
  .cart-summary select,
  .cart-summary input {
    width:auto;
    padding: 10px 12px;
    border-radius: 50px;
    border: 1px solid rgba(var(--color-foreground), 1);
    font-size: 14px;
    transition: border-color .2s;
    background: #fff;
  }
  .cart-summary select{
    width:100%;
  }
  .cart-summary select:focus,
  .cart-summary input:focus { outline: none; border-color: #111; }

  .cart-summary select:disabled {
    background-color: #f5f5f5;
    cursor: not-allowed;
    opacity: .6;
  }

  /* Province visibility */
  .field.province-field { display: none; }
  .field.province-field.show { display: block; }

  /* Rates header and list (UL) */
  .rates-header {
    margin-top: 20px;
    font-size: 16px;
    font-weight: 700;
    color: rgba(var(--color-foreground), 1);
    line-height: 20px;
    margin-bottom: 12px;
  }
  span#summary-subtotal , span#summary-tax{
    font-weight: 600;
    color: rgba(var(--color-foreground), 1);
}
 .shipping-rates-list {
    list-style: none;
    margin: 6px 0 0;
    padding: 0;
    border: 1px solid rgba(0,0,0,.1);
    border-radius: 8px;
    overflow: hidden;
    max-width: 100%;
    margin-bottom: 20px;
    width: 100%;
}
  .shipping-rates-list li {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 12px;
    background: #fff;
    border-bottom: 1px solid rgba(0,0,0,.06);
  }
  .shipping-rates-list li:last-child { border-bottom: 0; }
  .rate-radio {
    margin: 0;
    width: 16px; height: 16px;
    accent-color: #111;
    flex: 0 0 auto;
  }
  .rate-label { flex: 1 1 auto; font-size: 14px; color: #333; }
  .rate-price { font-weight: 600; color: #333; font-size: 14px; }
  .rate-price.free { color: #28a745; }

  /* Divider and rows */
  .summary-divider {
    margin: 16px 0;
    border-top: 1px solid rgba(0,0,0,.08);
  }
  .summary-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 14px;
    color: rgba(var(--color-foreground), 1);
    font-weight: 300;
    line-height: 22px;
    margin-bottom: 20px;
  }
  .summary-row.summary_row_text {
    padding-bottom: 20px;
    margin-bottom: 10px;
    border-bottom: 1px solid #D9D9D9;
}
.summary-row--total {
    font-size: 16px;
    font-weight: 500;
}

  /* Inline shipping line */
  .shipping-rate-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 14px;
    color: #666;
    padding-bottom: 20px;
    border-bottom: 1px solid #D9D9D9;
    margin-bottom: 14px;
  }
  .shipping-rate-value { font-weight: 600; color: #333; font-size: 15px; }

  /* Button */
  .summary-checkout-btn {
    width: 100%;
    border: 0;
    font-weight: 500;
    letter-spacing: 0;
    cursor: pointer;
    text-transform: uppercase;
    cursor: pointer;
  }
  .summary-checkout-btn:disabled { opacity: .6; cursor: not-allowed; }

  /* Hide duplicated default totals/cta (styled ones are inside card) */
  .cart__blocks > .js-contents,
  .cart__blocks > .cart__ctas { display: none; }
/* Remove native select arrow */
.custom-select select {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  background: none;
  padding-right: 44px;
}

/* Wrapper */
.select-wrapper {
  position: relative;
}

/* Custom SVG arrow */
.select-icon {
  position: absolute;
  right: 14px;
  top: 50%;
  transform: translateY(-50%) rotate(0deg);
  pointer-events: none;
  line-height:0;
  transition: transform 0.25s ease;
}

/* Rotate when open */
.select-wrapper.is-open .select-icon {
  transform: translateY(-50%) rotate(180deg);
}

/* Disabled select */
.custom-select select:disabled {
  background-color: #f5f5f5;
  cursor: not-allowed;
}

.custom-select select:disabled + .select-icon {
  opacity: 0.4;
}

  @media screen and (max-width: 749px) {
    .cart-summary { padding: 16px; }
    .cart-summary h3 { font-size: 16px; }
  }
  @media screen and (max-width: 750px) {
  .cart__footer-wrapper , .cart__items-wrapper {
    max-width: 100%;
    display: block;
    width: 100%;
}
.cart__items-wrapper .cart-items--custom td.cart-item__price .price--end{
      font-size: 14px;
    font-weight: 500;
}
.is-cart-page {
    display: block;
}
}
