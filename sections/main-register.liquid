<div class="custom_login_page_width">
  <div class="customer register section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
    <h1 >
      {{ 'customer.register.title' | t }}
    </h1>
    <div class="register_content">
      {{ section.settings.register_content }}
    </div>
    {%- form 'create_customer', novalidate: 'novalidate' -%}
      {%- if form.errors -%}
        <h2 class="form__message" tabindex="-1" autofocus>
          <span class="svg-wrapper">
            {{- 'icon-error.svg' | inline_asset_content -}}
          </span>
          {{ 'templates.contact.form.error_heading' | t }}
        </h2>
        <ul>
          {%- for field in form.errors -%}
            <li>
              {%- if field == 'form' -%}
                {{ form.errors.messages[field] }}
              {%- else -%}
                <a href="#RegisterForm-{{ field }}">
                  {{ form.errors.translated_fields[field] | capitalize }}
                  {{ form.errors.messages[field] }}
                </a>
              {%- endif -%}
            </li>
          {%- endfor -%}
        </ul>
      {%- endif -%}
    <div>
      <!-- Full Name (VISIBLE) -->
      <span class="login_grid">
        <span class="login_grid_title">{{section.settings.name_label }}</span>
        <div class="field">
          <input
            type="text"
            id="RegisterForm-FullName"
            placeholder="Full name"
            autocomplete="name"
            required
          >
          <label for="RegisterForm-FullName">{{section.settings.name_placeholder }}</label>
        </div>
      </span>

      <!-- First Name (HIDDEN but submitted) -->
      <input
        type="hidden"
        name="customer[first_name]"
        id="RegisterForm-FirstName"
      >

      <!-- Last Name (HIDDEN but submitted) -->
      <input
        type="hidden"
        name="customer[last_name]"
        id="RegisterForm-LastName"
      >

      <span class="login_grid">
      <span class="login_grid_title">{{ 'customer.register.email' | t }}</span>
        <div class="field">
          <input
            type="email"
            name="customer[email]"
            id="RegisterForm-email"
            {% if form.email %}
              value="{{ form.email }}"
            {% endif %}
            spellcheck="false"
            autocapitalize="off"
            autocomplete="email"
            aria-required="true"
            {% if form.errors contains 'email' %}
              aria-invalid="true"
              aria-describedby="RegisterForm-email-error"
            {% endif %}
            placeholder="{{section.settings.email_placeholder }}"
          >
          <label for="RegisterForm-email">
           {{section.settings.email_placeholder }}
          </label>
        </div>
      
      {%- if form.errors contains 'email' -%}
        <span id="RegisterForm-email-error" class="form__message">
          <span class="svg-wrapper">
            {{- 'icon-error.svg' | inline_asset_content -}}
          </span>
          {{ form.errors.translated_fields.email | capitalize }}
          {{ form.errors.messages.email }}.
        </span>
      {%- endif -%}
      </span>
      <span class="login_grid">
      <span class="login_grid_title">{{ 'customer.register.password' | t  }}</span>
        <div class="field">
          <input
            type="password"
            name="customer[password]"
            id="RegisterForm-password"
            aria-required="true"
            {% if form.errors contains 'password' %}
              aria-invalid="true"
              aria-describedby="RegisterForm-password-error"
            {% endif %}
            autocomplete="new-password"
            placeholder="{{section.settings.password_placeholder }}"
          >
          <label for="RegisterForm-password">
           {{section.settings.password_placeholder }}
          </label>
        </div>
        {%- if form.errors contains 'password' -%}
          <span id="RegisterForm-password-error" class="form__message">
            <span class="svg-wrapper">
              {{- 'icon-error.svg' | inline_asset_content -}}
            </span>
            {{ form.errors.translated_fields.password | capitalize }}
            {{ form.errors.messages.password }}.
          </span>
        {%- endif -%}
      </span>
      <span class="login_grid">
      <span class="login_grid_title">{{section.settings.confirm_password_label }}</span>
      <!-- Confirm Password (client-side validated) -->
      <div class="field">
        <input
          type="password"
          name="customer[password_confirmation]"
          id="RegisterForm-password-confirm"
          autocomplete="new-password"
          placeholder="{{section.settings.confirm_password_placeholder }}"
        >
        <label for="RegisterForm-password-confirm">{{section.settings.confirm_password_placeholder }}</label>
      </div>
      <small id="RegisterForm-password-confirm-error" class="form__message" style="display:none;"></small>
      </span>
      <!-- Actions row -->
      {% comment %}<div class="register-actions">
        <label for="RegisterRemember" class="remember-me">
          <input type="checkbox" id="RegisterRemember">
          <span>Remember me</span>
        </label>
        <a class="forgot-link" href="{{ routes.account_login_url }}#recover">Forgot password?</a>
      </div> {% endcomment %}
      {%- if form.errors contains 'password' -%}
        <span id="RegisterForm-password-error" class="form__message">
          <span class="svg-wrapper">
            {{- 'icon-error.svg' | inline_asset_content -}}
          </span>
          {{ form.errors.translated_fields.password | capitalize }}
          {{ form.errors.messages.password }}.
        </span>
      {%- endif -%}
    </div>
      <button>
        {{ 'customer.register.submit' | t }}
      </button>
    {%- endform -%}
    <p class="already-account">
    Already have an account?
    <a href="{{ routes.account_login_url }}" aria-label="Log in to your account">
      Log In
    </a>
  </p>
  </div>
</div>
<script>
document.addEventListener('DOMContentLoaded', function () {
  const form = document.querySelector('form[action*="account"]');
  if (!form) return;

  const fullNameInput = document.getElementById('RegisterForm-FullName');
  const firstNameInput = document.getElementById('RegisterForm-FirstName');
  const lastNameInput  = document.getElementById('RegisterForm-LastName');

  if (!fullNameInput || !firstNameInput || !lastNameInput) return;

  form.addEventListener('submit', function () {
    const fullName = fullNameInput.value.trim();

    if (!fullName) return;

    const nameParts = fullName.split(/\s+/);

    firstNameInput.value = nameParts.shift(); // first word
    lastNameInput.value  = nameParts.join(' '); // rest
  });
});
</script>

