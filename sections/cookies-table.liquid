{% style %}
.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
}

.cookies-table-wrapper h2 {
  margin: 0 0 20px 0;
  font-size: 37px;
  color:{{ section.settings.header_bg }};
}

.cookies-table thead tr {
  border: 1px solid {{ section.settings.header_bg }};
}

.cookies_head_content {
  color: #646464;
  font-weight: 300;
  font-size: 16px;
  line-height: 24px;
}

.cookies_heading_text {
  margin-bottom: 81px;
}

.cookies-table {
  width: 100%;
  border-collapse: collapse;
  border: 1px solid {{ section.settings.header_bg }};
}

.cookies-table th,
.cookies-table td {
  padding: 24px 16px;
  text-align: left;
  border-bottom: 1px solid #D9D9D9;
  vertical-align: top;
}

.cookies-table td {
  padding: 20px 16px;
}

.cookies-table th {
  background: {{ section.settings.header_bg }};
  color: {{ section.settings.header_text }};
  font-weight: 500;
  text-align: center;
  font-size: 22px;
  line-height: 20px;
}

.cookies-table td {
  font-size: 16px;
  line-height: 24px;
  border-left: 1px solid #2B2020;
  text-align: center;
  font-weight: 300;
  color: rgba(var(--color-foreground), 1);
}

th.column_1_th {
  border-right: 1px solid #fff;
}

td.cokkies_table_column_1.last-row,
.cookies-table td.last-row {
  border-bottom: 1px solid {{ section.settings.header_bg }};
}

.cookies-table td strong {
  font-weight: 300;
}

@media screen and (max-width: 1024px) {
  .cookies_heading_text {
    margin-bottom: 40px;
  }
}
@media screen and (max-width: 1024px) {
  .cookies-table-wrapper h2{
      margin: 0 0 10px 0;
      font-size: 30px;
  }
  .cookies_head_content{
      font-size: 14px;
  }
  .cookies-table td{
      font-size: 14px;
      line-height: 18px;
  }
  .cookies-table td {
      padding: 15px 16px;
  }
  .cookies-table th{
    font-size: 20px;
  }
}
@media screen and (max-width: 749px) {
  .cookies-table-wrapper h2 {
    font-size: 28px;
  }

  .cookies-table {
    font-size: 12px;
    border: 1px solid {{ section.settings.header_bg }};
  }

  .cookies-table th {
    font-size: 14px;
    padding: 12px 8px;
    line-height: 16px;
  }

  .cookies-table td {
    font-size: 11px;
    padding: 12px 8px;
    line-height: 16px;
    word-break: break-word;
  }

  .cookies_heading_text {
    margin-bottom: 20px;
  }
}
{% endstyle %}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding cookies-table-wrapper">
    <div class="cookies_heading_text">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}
        <div class="cookies_head_content">
          {{ section.settings.content }}
    </div>
    </div>
    <table class="cookies-table">
      <thead>
        <tr>
          <th class="column_1_th">{{ section.settings.column_1 }}</th>
          <th>{{ section.settings.column_2 }}</th>
        </tr>
      </thead>
      <tbody>
        {% for block in section.blocks %}
          <tr>
            <td class="cokkies_table_column_1 {% if forloop.last %}last-row{% endif %}">
              {{ block.settings.cookie_name }}
            </td>
            <td class="{% if forloop.last %}last-row{% endif %}">
              {{ block.settings.cookie_description }}
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>

{% schema %}
{
  "name": "Cookies table",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "List of cookies we collect"
    },
    {
      "type": "text",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "text",
      "id": "column_1",
      "label": "First column title",
      "default": "Cookie Name"
    },
    {
      "type": "text",
      "id": "column_2",
      "label": "Second column title",
      "default": "Cookie Description"
    },
    {
      "type": "color",
      "id": "header_bg",
      "label": "Header background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "header_text",
      "label": "Header text color",
      "default": "#ffffff"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 120,
      "step": 4,
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "cookie_row",
      "name": "Cookie row",
      "settings": [
        {
          "type": "text",
          "id": "cookie_name",
          "label": "Cookie name",
          "default": "FORM_KEY"
        },
        {
          "type": "text",
          "id": "cookie_description",
          "label": "Cookie description",
          "default": "Stores randomly generated key used to prevent forged requests."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Cookies table"
    }
  ]
}
{% endschema %}