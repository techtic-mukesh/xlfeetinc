<style>
/* Stable pre-init layout that matches slidesPerView: 1.2 (keeps right gap) */
.cart-upsell__swiper { overflow: hidden; }

/* Before Swiper initializes */
.cart-upsell__swiper:not(.swiper-initialized) .swiper-wrapper {
  display: grid;
  grid-auto-flow: column;
  gap: 14px;
  transform: none !important;
}
/* Multi-slide: show a right peek (~1.2 per view) */
.cart-upsell__swiper:not(.swiper-initialized):not(.is-single) .swiper-wrapper {
  grid-auto-columns: calc(100% / 1.2);
}
/* Single item: full width, no gap */
.cart-upsell__swiper.is-single .swiper-wrapper {
  grid-auto-columns: 100%;
  transform: none !important;
}
.cart-upsell__swiper.is-single .swiper-slide {
  width: 100% !important;
  margin-right: 0 !important;
}
</style>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const INIT_DELAY = 40;

    function destroyUpsell() {
      if (window.__cartUpsellSwiper && typeof window.__cartUpsellSwiper.destroy === 'function') {
        try { window.__cartUpsellSwiper.destroy(true, true); } catch (e) {}
      }
      window.__cartUpsellSwiper = null;
      const el = document.querySelector('.cart-upsell__swiper');
      if (el) el._swiperInstance = null;
    }

    function getSlidesPerView(el) {
      const n = el.querySelectorAll('.swiper-slide').length;
      return n <= 1 ? 1 : 1.2;
    }

    function markSingleClass(el) {
      const n = el.querySelectorAll('.swiper-slide').length;
      el.classList.toggle('is-single', n <= 1);
    }

    function initUpsell() {
      if (!window.Swiper) return;
      const el = document.querySelector('.cart-upsell__swiper');
      if (!el) return;

      markSingleClass(el);

      // Update existing instance if possible
      if (el._swiperInstance && !el._swiperInstance.destroyed) {
        el._swiperInstance.params.slidesPerView = getSlidesPerView(el);
        el._swiperInstance.update();
        return;
      }

      destroyUpsell();

      const instance = new Swiper(el, {
        slidesPerView: getSlidesPerView(el),
        spaceBetween: 14,
        watchOverflow: true,
        observer: true,
        observeParents: true,
        resizeObserver: true,
        breakpoints: {
          480: { slidesPerView: getSlidesPerView(el) },
          640: { slidesPerView: getSlidesPerView(el) },
          990: { slidesPerView: getSlidesPerView(el) }
        },
        on: {
          init() { setTimeout(() => this.update(), 100); },
          resize() {
            this.params.slidesPerView = getSlidesPerView(this.el);
            markSingleClass(this.el);
            this.update();
          },
          observerUpdate() {
            this.params.slidesPerView = getSlidesPerView(this.el);
            markSingleClass(this.el);
            this.update();
          }
        }
      });

      el._swiperInstance = instance;
      window.__cartUpsellSwiper = instance;
    }

    // Initial
    setTimeout(initUpsell, INIT_DELAY);

    // Re-init whenever the cart drawer DOM is replaced (quantity/add/remove)
    const drawer = document.querySelector('cart-drawer');
    if (drawer) {
      const mo = new MutationObserver((muts) => {
        for (const m of muts) {
          if (m.type === 'childList') {
            setTimeout(initUpsell, INIT_DELAY);
            break;
          }
        }
      });
      mo.observe(drawer, { childList: true, subtree: true });
    }

    // Keep your ADD flow; re-init after HTML swap
    let adding = false;
    document.addEventListener('click', async (e) => {
      const btn = e.target.closest('.cart-upsell__add[data-variant-id]');
      if (!btn || adding) return;

      const id = btn.getAttribute('data-variant-id');
      if (!id) return;

      try {
        adding = true;
        btn.disabled = true;

        await fetch((window.routes?.cart_add_url || '/cart/add') + '.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id: Number(id), quantity: 1 })
        });

        const res = await fetch((window.routes?.cart_url || '/cart') + '?section_id=cart-drawer');
        const html = await res.text();
        const doc = new DOMParser().parseFromString(html, 'text/html');
        const newDrawer = doc.querySelector('cart-drawer');
        const current = document.querySelector('cart-drawer');

        if (newDrawer && current) {
          destroyUpsell();
          current.innerHTML = newDrawer.innerHTML;
          current.classList.add('active');
          setTimeout(initUpsell, INIT_DELAY);
        } else {
          location.reload();
        }
      } catch (err) {
        console.error(err);
        location.reload();
      } finally {
        adding = false;
      }
    });
  });
</script>